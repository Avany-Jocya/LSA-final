{% set article_show= path('article_show', { 'slug': article.slug }) %}
<article class="mb-5">
    <div class="row">
        <div class="col-md-5">
            {% if article.featuredImage %}
                <a href="{{article_show}}">
                    <img src="/uploads/{{ article.featuredImage.filename }}" alt="{{ article.featuredImage.altText }}" loading="lazy" width="350" height="205" >
                </a>
            {% endif %}
        </div>
        <div class="col-md-7">
            <h2 class="article-title text-success">
                <a href="{{article_show}}" class="text-decoration-none  text-success">{{ article.title }}</a>
            </h2>
            
            {{ article.featuredText ?: '' }}
        </div>
    </div>
</article>